<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="liu.zhan.jun.sqlitetest.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/crateTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="创建Teacher表"
            android:onClick="createTable"
            android:textSize="38sp"/>

        <Button
            android:id="@+id/db_insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teacher插入数据"
            android:textSize="38sp"
            android:onClick="db_insert"/>


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="query"
            android:textSize="38sp"
            android:text="query teacher"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="query2"
            android:textSize="38sp"
            android:text="封装后查询数据"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="queryAll"
            android:textSize="38sp"
            android:text="查询数据所有数据"/>
        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="update1"
            android:textSize="38sp"
            android:text="修改数据"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="delete"
            android:textSize="38sp"
            android:text="删除单个数据"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="deleteAll"
            android:textSize="38sp"
            android:text="删除所有数据"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="insertStudent"
            android:textSize="38sp"
            android:text="插入Student"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="createStudent"
            android:textSize="38sp"
            android:text="创建Student"/>



        <TextView
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</ScrollView>
